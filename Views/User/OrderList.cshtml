@model IEnumerable<GroupProject_Ecommerce.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<section class="user-profile section">
	<div class="container">
		<div class="row">
			<div class="col-lg-4">
				<div class="sidebar-dashboard">
					<!-- User Widget -->
					<div class="widget user">
						<!-- User Image -->
						<div class="image d-flex justify-content-center">
							<img src="~/images/user/user-thumb.jpg" alt="" class="">
						</div>
						<!-- User Name -->
						<h5 class="text-center">@ViewBag.FullName</h5>
					</div>
					<!-- Dashboard Links -->
					<div class="widget user-dashboard-menu">
						<ul>
							<li><a asp-controller="User" asp-action="Profile">Thông tin cá nhân</a></li>
							<li><a asp-controller="User" asp-action="Edit">Chỉnh sửa thông tin cá nhân</a></li>
							<li><a asp-controller="User" asp-action="ChangePassword">Đổi mật khẩu</a></li>
							<li><a asp-controller="User" asp-action="ChangeEmail">Đổi email</a></li>
							<li><a asp-controller="User" asp-action="OrderList">Lịch sử đơn hàng</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				<div class="widget dashboard-container my-adslist">
					<h3 class="widget-header">Lịch sử đơn hàng</h3>
					<table class="table table-responsive product-dashboard-table">
						<thead>
							<tr>
								<th class="text-center">
									Mã đơn hàng
								</th>
								<th class="text-center">

								</th>
								<th class="text-center">
									Thông tin đơn hàng
								</th>
								<th class="text-center">
									Xử lý
								</th>								
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td class="text-center">
										@item.Id
									</td>
									<td class="product-thumb">
										<img width="100px" height="auto" src="~/images/Product/@item.Images" alt="image description">
									</td>
									<td class="product-details">
										<span><strong style="width:40%">Ngày đặt: </strong><time>@item.Date.ToShortDateString()</time> </span>
										<span><strong style="width:40%">Phương thức: </strong>@item.PayMethod </span>
										<span class="status active"><strong style="width:40%">Trạng thái</strong>@item.Status</span>
										<span><strong style="width:40%">Tổng tiền: </strong>@item.Total.ToString("#,##") &#x0111</span>
									</td>
									<td class="action" data-title="Action">
										<div class="">
											<ul class="list-inline justify-content-center">
												<li class="list-inline-item">
													<a data-toggle="tooltip" data-placement="top" title="view" class="view" asp-action="OrderDetails" asp-route-id="@item.Id">
														<i class="fa fa-eye"></i>
													</a>
												</li>

											</ul>
										</div>
									</td>
								</tr>
							}
						</tbody>
					</table>

