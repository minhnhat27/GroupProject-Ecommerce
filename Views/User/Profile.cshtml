@{
	ViewData["Title"] = "Thông tin cá nhân";
	Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<!--==================================
=            User Profile            =
===================================-->

<section class="user-profile section">
	<div class="container">
		<div class="row">
			<div class="col-lg-4">
				<div class="sidebar-dashboard">
					<!-- User Widget -->
					<div class="widget user">
						<!-- User Image -->
						<div class="image d-flex justify-content-center">
							<img src="~/images/user/user-thumb.jpg" alt="" class="">
						</div>
						<!-- User Name -->
						<h5 class="text-center">@Model.FullName</h5>
					</div>
					<!-- Dashboard Links -->
					<div class="widget user-dashboard-menu">
						<ul>
							<li><a asp-controller="User" asp-action="Profile">Thông tin cá nhân</a></li>
							<li><a asp-controller="User" asp-action="Edit">Chỉnh sửa thông tin cá nhân</a></li>
							<li><a asp-controller="User" asp-action="ChangePassword">Đổi mật khẩu</a></li>
							<li><a asp-controller="User" asp-action="ChangeEmail">Đổi email</a></li>
							<li><a asp-controller="User" asp-action="OrderList">Lịch sử đơn hàng</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				<!-- Edit Profile Welcome Text -->
				<div class="widget welcome-message">
					<h2>@Model.FullName</h2>
					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation</p>
				</div>
				<!-- Edit Personal Info -->
				<div class="row">
					<div class="col-md-12">
						<div class="widget personal-info">
							<h3 class="widget-header user">Thông tin cá nhân</h3>
							<div class="form-group">
								<label for="last-name">Họ lót</label>
								<input name="LastName" class="form-control" id="last-name" value="@Model.LastName" disabled>
							</div>
							<div class="form-group">
								<label for="first-name">Tên</label>
								<input name="FirstName" class="form-control" id="first-name" value="@Model.FirstName" disabled>
							</div>
							<div class="form-group">
								<label for="city">Tỉnh/Thành phố</label>
								<input name="City" class="form-control" id="city" value="@Model.City" disabled>
							</div>
							<div class="form-group">
								<label for="Email">Email</label>
								<input name="Email" class="form-control" id="email" value="@Model.Email" disabled>
							</div>
							<div class="form-group">
								<label for="phonenumber">Số điện thoại</label>
								<input name="PhoneNumber" class="form-control" id="phonenumber" value="@Model.PhoneNumber" disabled>
							</div>
							<div class="form-group">
								<label for="createtime">Ngày tạo tài khoản</label>
								<input name="CreateTime" class="form-control" id="createtime" value="@Model.CreateTime" disabled>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

