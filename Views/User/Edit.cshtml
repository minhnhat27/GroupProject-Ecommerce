@model GroupProject_Ecommerce.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml";
}

<section class="user-profile section">
	<div class="container">
		<div class="row">
			<div class="col-lg-4">
				<div class="sidebar-dashboard">
					<!-- User Widget -->
					<div class="widget user">
						<!-- User Image -->
						<div class="image d-flex justify-content-center">
							<img src="~/images/user/user-thumb.jpg" alt="" class="">
						</div>
						<!-- User Name -->
						<h5 class="text-center">@Model.FullName</h5>
					</div>
					<!-- Dashboard Links -->
					<div class="widget user-dashboard-menu">
						<ul>
							<li><a asp-controller="User" asp-action="Profile">Thông tin cá nhân</a></li>
							<li><a asp-controller="User" asp-action="Edit">Chỉnh sửa thông tin cá nhân</a></li>
							<li><a asp-controller="User" asp-action="ChangePassword">Đổi mật khẩu</a></li>
							<li><a asp-controller="User" asp-action="ChangeEmail">Đổi email</a></li>
							<li><a asp-controller="User" asp-action="OrderList">Lịch sử đơn hàng</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="col-lg-8">
				<!-- Edit Profile Welcome Text -->
				<div class="widget welcome-message">
					<h2>@Model.FullName</h2>
					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation</p>
				</div>
				<!-- Edit Personal Info -->
				<div class="row">
					<div class="col-md-12">
						<div class="widget personal-info">
							<h3 class="widget-header user">Chỉnh sửa thông tin cá nhân</h3>
							<form asp-controller ="User" asp-action="Edit" method="post">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="form-group">
									<label for="last-name">Họ lót</label>
									<input asp-for="LastName" name="LastName" type="text" class="form-control" id="last-name" value="@Model.LastName">
									<span asp-validation-for="LastName" class="text-danger"></span>
								</div>
								<div class="form-group">
									<label for="first-name">Tên</label>
									<input asp-for="FirstName" name="FirstName" type="text" class="form-control" id="first-name" value="@Model.FirstName">
								</div>
								<div class="form-group">
									<label for="city">Tỉnh/Thành phố</label>
									<input asp-for="City" name="City" type="text" class="form-control" id="city" value="@Model.City">
									<span asp-validation-for="City" class="text-danger"></span>
								</div>
								<div class="form-group">
									<label for="Email">Email</label>
									<input asp-for="Email" name="Email" type="email" class="form-control" id="email" value="@Model.Email">
									<span asp-validation-for="Email" class="text-danger"></span>
								</div>
								<div class="form-group">
									<label for="phonenumber">Số điện thoại</label>
									<input asp-for="PhoneNumber" name="PhoneNumber" type="number" class="form-control" id="phonenumber" value="@Model.PhoneNumber">
									<span asp-validation-for="PhoneNumber" class="text-danger"></span>
								</div>
								<button class="btn btn-transparent">Lưu thay đổi</button>
							</form>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</section>
