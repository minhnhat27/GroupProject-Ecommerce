@using GroupProject_Ecommerce.ViewModels;
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<!--Login-->
<section class="login py-5 border-top-1 m-b-50">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 align-item-center">
                <div class="border ">
                    <h3 class="bg-gray p-4">Đăng nhập</h3>
                    @{
                        string mess = TempData["Register"] as string ?? "";
                        if (!string.IsNullOrEmpty(mess) && mess.Equals("Register"))
                        {
                            <span class="text-danger">*** Đăng ký thành công. Vui lòng đăng nhập lại</span>
                            TempData["Register"] = string.Empty;
                        }
                    }
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <fieldset class="p-4">
                            @* <input class="form-control mb-4" type="text" placeholder="Username" required> *@
                            @* <input class="form-control mb-4" type="password" placeholder="Password" required> *@
                            <input asp-for="UserName" class="form-control mb-4" placeholder="Username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>

                            <input asp-for="Password" class="form-control mb-4" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            
                            <div class="mb-4">
                                <div class="g-recaptcha" data-sitekey="6LdYW6kpAAAAAOIxaIvvomv8v989LLMgkL_tTrXj"></div>
                            </div>
                            @Html.ValidationMessage("ReCaptcha", new { @class = "text-danger" })

                            <button type="submit" class="btn-login">Đăng nhập</button>
                            <hr />
                            <div class="login-third">
                                <a class="btn btn-login-third" asp-controller="Account" asp-action="GoogleLogin" asp-route-provider="Google">
                                    <div class="login-gg">
                                        <img src="https://lh3.googleusercontent.com/COxitqgJr1sJnIDe8-jiKhxDx1FrYbtRHKJ9z_hELisAlapwE9LUPh6fcXIfb5vwpbMl4xl9H9TRFPc5NOO8Sb3VSgIBrfRYvW6cUA" alt="Google Logo" width="34" height="34">
                                        <span style="padding-left: 5px; font-weight: 500; font-size:15px;"> Google</span>
                                    </div>
                                </a>
                            </div>
                            @* <a class="mt-3 d-block text-primary" href="#!">Forget Password?</a> *@
                            <a asp-action="Register" class="mt-3 d-inline-block text-primary">Bạn chưa có tài khoản?</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}